
public class Problem2 {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int Sum = 2;
		int a=1;
		int b=2;
		int c=0;
		int count = 0;
		while(c<= 4000000){
			if(c % 2 == 0){
				Sum = Sum + c;
			}
			count++;
			c = a + b;
			a = b;
			b = c;
		}
		System.out.println(Sum);
		System.out.println(count);
	}

}
